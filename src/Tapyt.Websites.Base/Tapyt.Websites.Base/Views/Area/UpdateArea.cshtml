@model Tapyt.Websites.Base.Models.CreateAreaViewModel

@using (Html.BeginForm("UpdateArea", "Area", FormMethod.Post))
{
    @Html.HiddenFor(m=>m.Id)
    
    @Html.LabelFor(m => m.Title)
    @Html.TextBoxFor(m => m.Title)

    @Html.LabelFor(m => m.Text)
    @Html.TextAreaFor(m => m.Text)

    <input type="submit" id="submitBtn" value="Update area" />
}